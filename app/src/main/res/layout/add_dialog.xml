<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">




        <EditText
            android:id="@+id/item_add"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:hint="@string/entrez_un_item_acheter"
            android:padding="10dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/qte"
            android:layout_width="wrap_content"
            android:layout_below="@+id/item_add"
            android:layout_height="wrap_content"
            android:hint="@string/entrez_sa_quantit"
            android:padding="10dp"
            android:inputType="number"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addtbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_add"
            android:layout_alignBottom="@+id/qte"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="305dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="26dp"
            android:text="@string/ajouter" />
</RelativeLayout>
